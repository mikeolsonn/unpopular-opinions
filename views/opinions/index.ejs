<%- include('../partials/header') %>

<% users.map(function(user) { %>
  <% if(user.opinions) { %>
<% user.opinions.forEach(function(o) { %>
<div class="row">
  <div class="col s12 m6">
    <div class="card light-blue lighten-3">
      <div class="card-content white-text">
        <span class="card-title"><%= o.itemName %></span>
        <p><strong><%= user.name %></strong></p>
        <p><%= o.rating %></p>
        <p><%= o.caption %></p>
      </div>
      <div class="card-action">

          <form action="/opinions/<%= o._id %>?_method=DELETE" method="POST">
              <button class="delete" type="submit"><i class="fas fa-trash" type="submit"></i></button></form>

              <a href="/opinions/<%= o._id %>"><i class="far fa-comment"></i></a>
      
        <a href="/opinions/<%= o._id %>/edit"><i class="fas fa-cog"></i></a>

      </div>
    </div>
  </div>
</div>
<% }); %>
<% }; %>
<% }); %>





<%- include('../partials/footer') %>